# Application Configuration
APP_ENV=dev
PORT=8080
DEBUG=true
LOG_LEVEL=INFO

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
MODEL_NAME=gpt-4o-mini
MODEL_TEMPERATURE=0.1
MODEL_MAX_TOKENS=4000

# Vector Database (Pinecone)
VECTOR_DB_PROVIDER=pinecone
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENV=us-east-1
PINECONE_INDEX=reflex-kb-v1

# Database Configuration
POSTGRES_URL=postgresql+psycopg2://user:password@localhost:5432/reflex
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# Google Workspace Integration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=https://your.domain.com/oauth/google/callback
GOOGLE_SERVICE_ACCOUNT_JSON_BASE64=base64_encoded_service_account_json
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your_bot_token_here
SLACK_SIGNING_SECRET=your_signing_secret_here
SLACK_APP_LEVEL_TOKEN=xapp-your_app_level_token_here
SLACK_VERIFICATION_TOKEN=your_verification_token_here

# Asana Integration
ASANA_ACCESS_TOKEN=your_asana_access_token_here
ASANA_WORKSPACE_ID=your_workspace_id_here
ASANA_WEBHOOK_SECRET=your_webhook_secret_here

# Security and Authentication
SECRET_KEY=your_secret_key_here_32_chars_min
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Guardrails and Policy
EXCLUDED_MARKETS=therapeutic,wellness,medical
STYLE_NO_BOLD=true
STYLE_NO_EMOJI=true
REQUIRE_APPROVAL=true
SAFE_MODE=true

# Monitoring and Telemetry
OTEL_ENDPOINT=http://localhost:4317
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# Webhook Configuration
WEBHOOK_BASE_URL=https://your.domain.com
SLACK_WEBHOOK_PATH=/webhooks/slack/events
GMAIL_WEBHOOK_PATH=/webhooks/gmail/notifications
ASANA_WEBHOOK_PATH=/webhooks/asana/events

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=sparkroboticai@gmail.com
SMTP_PASSWORD=your_app_specific_password_here

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Background Jobs
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true 